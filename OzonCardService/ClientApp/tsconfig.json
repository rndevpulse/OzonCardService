{
  "compileOnSave": true,
  "compilerOptions": {
    "checkJs": false,
    
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": false,
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2018",
      "dom"
    ],
    "outDir": "wwwroot/js",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowJs": false
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/*",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
